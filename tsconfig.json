{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "style/*": [
        "src/buttons/ButtonStyle.module.css", 
        "src/view/EditorTextAreaView.module.css", 
        "src/view/EditorTitleView.module.css"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "./dist",
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.module.css",
    "src/**/*.ts",
    "src/index.tsx",
    "src/react-app-env.d.ts",
    "src/globals.d.ts"
  ]
}
